<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintHorizontal_weight="7"
    tools:ignore="HardcodedText"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_menu_ammo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="여기에 갑옷 이름"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_menu_armor_class"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="3"
         />

    <TextView
        android:id="@+id/tv_menu_armor_class"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp"
        android:text="4"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_menu_ammo_caliber"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tv_menu_ammo_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_menu_ammo_caliber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp"
        android:text="7.62x39mm"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_menu_ammo_penetrate"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/tv_menu_armor_class"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_menu_ammo_penetrate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="8dp"
        android:text="110"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tv_menu_ammo_caliber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>